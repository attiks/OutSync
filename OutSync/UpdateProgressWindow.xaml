<Window x:Class="OutSync.UpdateProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Please wait..." Height="190" Width="325"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="False"
    Loaded="Window_Loaded"
    Icon="App.ico">

  <StackPanel Orientation="Vertical">
    <Image x:Name="image1"  Width="65" Height="65" Stretch="Uniform" Margin="5"/>
    <Label x:Name="nameLabel" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
    <ProgressBar x:Name="progressBar1" Minimum="1" Maximum="100" Width="250" Height="10" HorizontalAlignment="Center" Margin="0,10,0,10"/>
    <Button IsCancel="True" x:Name="cancelButton" Click="cancel_Click" Width="100" HorizontalAlignment="Center">Cancel</Button>
  </StackPanel>
</Window>