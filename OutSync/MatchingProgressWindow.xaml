<Window x:Class="OutSync.MatchingProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Please wait..." Height="100" Width="325"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="False"
    Loaded="Window_Loaded"
    Closing="Window_Closing"
    Icon="App.ico">
  <Grid>
    <Label 
      x:Name="statusLabel" 
      HorizontalAlignment="Center" 
      Margin="10" />
    
    <ProgressBar 
      x:Name="progressBar1" 
      Minimum="0" 
      Maximum="100" 
      Width="300" 
      Height="10" 
      HorizontalAlignment="Center" 
      Margin="0,20,0,0"/>    
  </Grid>
</Window>